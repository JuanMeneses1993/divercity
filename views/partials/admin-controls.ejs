    <div class="text-fields">
      <input class="user-input" type="text" name="user" placeholder="Nombre">
      <input class="user-input" type="password" name="pass" placeholder="Clave">
      <input class="user-input" type="password" name="passRepeat" placeholder="Repetir clave">
